<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FleeAndCatch_App.Pages.SzenarioOptionsPage"
             Title="FleeAndCatch">

    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="FleeAndCatch_Logo.png" HeightRequest="200" WidthRequest="200"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Szenarios" FontAttributes="Bold" FontSize="20" TextColor="#000080"/>
            </StackLayout>
        </StackLayout>
        <Button Text="Control" HeightRequest="50" Margin="-2,-4" TextColor="White" BackgroundColor="#008B8B" FontAttributes="Bold" FontSize="16" Command="{Binding BControl_OnCommand}"/>
        <Button Text="Synchron" HeightRequest="50" Margin="-2,-4" TextColor="White" BackgroundColor="#008080" FontAttributes="Bold" FontSize="16" Command="{Binding BSynchron_OnCommand}"/>
        <Button Text="Follow" HeightRequest="50" Margin="-2,-4,-2,-2" TextColor="White" BackgroundColor="#008080" FontAttributes="Bold" FontSize="16" Command="{Binding BFollow_OnCommand}"/>
    </StackLayout>
</ContentPage>