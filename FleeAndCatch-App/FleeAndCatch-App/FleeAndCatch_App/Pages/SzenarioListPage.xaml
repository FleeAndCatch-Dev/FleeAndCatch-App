<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FleeAndCatch_App.Pages.SzenarioListPage"
             Title="FleeAndCatch">

  <StackLayout Orientation="Vertical">
    <ListView ItemsSource="{Binding SzenarioGroupList}" HasUnevenRows="True" VerticalOptions="StartAndExpand">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" Spacing="10">
              <Label Text="{Binding Name}" FontSize="18" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/>
              <Label Text="{Binding Number}" FontSize="18" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button x:Name="BContinue" Text="Continue" HeightRequest="50" Margin="-2,-4,-2,-2" TextColor="White" BackgroundColor="#008B8B" FontAttributes="Bold" FontSize="16" VerticalOptions="End" Command="{Binding BContinue_OnCommand}"/>
  </StackLayout>
</ContentPage>